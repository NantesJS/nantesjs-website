{
  "extends": "next/core-web-vitals",
  "plugins": [
    "@stylistic"
  ],
  "rules": {
    "@stylistic/max-len": ["error", { "code": 120 }],
    "@stylistic/object-curly-spacing": ["error", "always"],
    "@stylistic/quotes": ["error", "single"],
    "@stylistic/semi": ["error", "never"],
    "@stylistic/jsx-quotes": ["error", "prefer-double"]
  }
}
